# Java sources
*.java          text diff=java
*.kt            text diff=kotlin
*.groovy        text diff=java
*.scala         text diff=java
*.gradle        text diff=java
*.gradle.kts    text diff=kotlin

# Common build-tool wrapper
mvnw            text eol=lf
gradlew         text eol=lf

# Normalize EOL for all files that Git considers text files
* text=auto eol=lf
# Except for Windows only files
*.bat eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# These files are binary and should be left untouched
*.class         binary
*.dll           binary
*.ear           binary
*.jar           binary
*.so            binary
*.war           binary
*.jks           binary

# Excluded from importing
.gitattributes export-ignore
.gitignore     export-ignore